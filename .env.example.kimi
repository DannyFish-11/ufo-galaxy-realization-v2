# ============================================================
# UFO Galaxy System - Environment Configuration
# 完整的API和服务配置模板
# ============================================================

# ============================================================
# 1. LLM API Keys - 大语言模型API配置
# ============================================================

# OpenAI - GPT系列模型 (gpt-4, gpt-4-turbo, gpt-3.5-turbo)
# 获取地址: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic - Claude系列模型 (claude-3-opus, claude-3-sonnet, claude-3-haiku)
# 获取地址: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Groq - 超高速推理 (Llama 3.3, Mixtral, Gemma)
# 获取地址: https://console.groq.com/keys
GROQ_API_KEY=your_groq_api_key_here

# 智谱AI - GLM-4系列 (glm-4, glm-4v, glm-3-turbo)
# 获取地址: https://open.bigmodel.cn/usercenter/apikeys
ZHIPU_API_KEY=your_zhipu_api_key_here

# OpenRouter - 统一API网关 (访问多个模型提供商)
# 获取地址: https://openrouter.ai/keys
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Google Gemini - Gemini系列 (gemini-1.5-pro, gemini-1.5-flash)
# 获取地址: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# xAI - Grok模型
# 获取地址: https://x.ai/api
XAI_API_KEY=your_xai_api_key_here

# DeepSeek - DeepSeek-V2/V3系列
# 获取地址: https://platform.deepseek.com/api_keys
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# Together AI - 开源模型托管 (Llama, Mixtral, Qwen等)
# 获取地址: https://api.together.xyz/settings/api-keys
TOGETHER_API_KEY=your_together_api_key_here

# Perplexity - 实时搜索增强AI
# 获取地址: https://www.perplexity.ai/settings/api
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# ============================================================
# 2. 工具API Keys - 外部工具服务
# ============================================================

# Brave Search - 隐私保护搜索API
# 获取地址: https://api.search.brave.com/app/keys
BRAVE_API_KEY=your_brave_api_key_here

# OpenWeather - 天气查询服务
# 获取地址: https://home.openweathermap.org/api_keys
OPENWEATHER_API_KEY=your_openweather_api_key_here

# PixVerse - AI视频生成
# 获取地址: https://app.pixverse.ai/api-keys
PIXVERSE_API_KEY=your_pixverse_api_key_here

# ============================================================
# 3. 数据库服务配置
# ============================================================

# Neo4j 图数据库配置
NEO4J_URI=bolt://neo4j:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=neo4j123

# Qdrant 向量数据库配置
QDRANT_URL=http://qdrant:6333
QDRANT_API_KEY=your_qdrant_api_key_here

# ============================================================
# 4. 对象存储配置 (MinIO)
# ============================================================

MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_BUCKET=ufo-galaxy
MINIO_USE_SSL=false

# ============================================================
# 5. WebRTC 配置
# ============================================================

# STUN服务器 (多个用逗号分隔)
STUN_SERVERS=stun.l.google.com:19302,stun1.l.google.com:19302

# TURN服务器配置 (用于NAT穿透)
TURN_SERVER=turn:your-turn-server.com:3478
TURN_USERNAME=your_turn_username
TURN_CREDENTIAL=your_turn_password

# 外部IP地址 (用于WebRTC公网访问)
EXTERNAL_IP=your_external_ip

# ============================================================
# 6. 本地模型服务配置
# ============================================================

# Ollama 本地模型服务
OLLAMA_URL=http://ollama:11434

# vLLM 高性能推理服务
VLLM_URL=http://vllm:8000

# ============================================================
# 7. 应用核心配置
# ============================================================

# 应用基础配置
APP_NAME=UFO-Galaxy
APP_ENV=development
APP_DEBUG=true
APP_PORT=8000
APP_HOST=0.0.0.0

# 日志配置
LOG_LEVEL=INFO
LOG_FORMAT=json

# JWT配置
JWT_SECRET=your_jwt_secret_key_here_change_in_production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Redis配置 (用于缓存和消息队列)
REDIS_URL=redis://redis:6379/0
REDIS_PASSWORD=

# ============================================================
# 8. 监控和可观测性
# ============================================================

# Prometheus配置
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Grafana配置
GRAFANA_ENABLED=true
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin123

# Jaeger链路追踪
JAEGER_ENABLED=true
JAEGER_ENDPOINT=http://jaeger:14268/api/traces

# ============================================================
# 9. 安全相关配置
# ============================================================

# CORS配置
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
CORS_ALLOW_CREDENTIALS=true

# 速率限制
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# API密钥加密
API_KEY_ENCRYPTION_SALT=your_encryption_salt_here

# ============================================================
# 10. 功能开关
# ============================================================

# 启用/禁用特定LLM提供商
ENABLE_OPENAI=true
ENABLE_ANTHROPIC=true
ENABLE_GROQ=true
ENABLE_ZHIPU=true
ENABLE_OPENROUTER=true
ENABLE_GEMINI=true
ENABLE_XAI=false
ENABLE_DEEPSEEK=true
ENABLE_TOGETHER=true
ENABLE_PERPLEXITY=true
ENABLE_OLLAMA=true
ENABLE_VLLM=false

# 工具功能开关
ENABLE_BRAVE_SEARCH=true
ENABLE_WEATHER=true
ENABLE_VIDEO_GENERATION=true

# 数据库功能开关
ENABLE_NEO4J=true
ENABLE_QDRANT=true
ENABLE_MINIO=true
