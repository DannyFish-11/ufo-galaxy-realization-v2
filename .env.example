# UFO Galaxy V2 - 环境变量配置
# ================================
# 复制此文件为 .env 并填入实际值
# 警告：永远不要将真实的 API 密钥提交到代码仓库！

# ============================================
# 环境设置
# ============================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# ============================================
# AI API Keys - LLM 服务配置
# ============================================

# OpenAI API (必需)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_API_BASE=https://api.openai.com/v1

# Anthropic Claude API (可选)
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Google Gemini API (可选)
GEMINI_API_KEY=your-gemini-api-key-here

# DeepSeek API (可选)
DEEPSEEK_API_KEY=your-deepseek-api-key-here
DEEPSEEK_API_BASE=https://api.deepseek.com/v1

# OpenRouter API (可选)
OPENROUTER_API_KEY=your-openrouter-api-key-here

# Groq API (可选)
GROQ_API_KEY=your-groq-api-key-here

# XAI (Grok) API (可选)
XAI_API_KEY=your-xai-api-key-here

# OneAPI 配置 (统一网关)
ONEAPI_URL=http://localhost:3000
ONEAPI_API_KEY=your-oneapi-key-here

# ============================================
# 数据库配置
# ============================================

# Redis
REDIS_URL=redis://localhost:6379

# Qdrant 向量数据库
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=your-qdrant-api-key-here

# MongoDB
MONGODB_URL=mongodb://localhost:27017

# PostgreSQL
POSTGRES_URL=postgresql://user:password@localhost:5432/ufo_galaxy

# Neo4j 图数据库
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your-neo4j-password-here

# ============================================
# 安全配置
# ============================================

# JWT 密钥 (生产环境必须更改)
JWT_SECRET=change-this-in-production
SECRET_KEY=change-this-in-production

# Session 密钥
SESSION_SECRET=change-this-in-production

# 加密密钥 (可选)
ENCRYPTION_KEY=

# CORS 配置
CORS_ORIGINS=*
ALLOWED_HOSTS=*

# ============================================
# 服务端口配置
# ============================================

WEB_UI_PORT=8080
API_PORT=8000
WEBSOCKET_PORT=8765

# ============================================
# 功能开关
# ============================================

ENABLE_L4_FEATURES=true
ENABLE_MULTI_DEVICE=true
ENABLE_VOICE_INPUT=false
ENABLE_HARDWARE_TRIGGERS=false

# ============================================
# 日志和监控
# ============================================

LOG_FILE=logs/ufo_galaxy.log
ENABLE_METRICS=true
ENABLE_TRACING=false

# ============================================
# 外部服务 (可选)
# ============================================

# Tailscale (远程访问)
TAILSCALE_AUTH_KEY=

# MQTT Broker
MQTT_BROKER_URL=mqtt://localhost:1883
MQTT_USERNAME=
MQTT_PASSWORD=

# ============================================
# 开发配置
# ============================================

# 热重载
HOT_RELOAD=true

# 调试模式
DEBUG_MODE=false

# 模拟模式 (不连接真实设备)
SIMULATION_MODE=false
